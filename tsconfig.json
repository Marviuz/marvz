{
  "extends": "@vercel/style-guide/typescript/node20",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@root": ["./root.ts"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "prettier.config.mjs",
    "**/*.ts",
    "**/*.cjs",
    "**/*.mjs"
  ],
  "exclude": ["node_modules"]
}
